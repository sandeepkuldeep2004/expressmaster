<%- include('../layouts/header') %>
    <div class="card">
        <div class="card-body col-lg-12">
            <h5 class="card-title">Edit User Group</h5>
            <form action="/usergroup/<%=usergroup._id%>" method="POST" class="row s12">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <input type="hidden" name="_method" value="PUT">
                <div class="row col-lg-6">
                    <div class="col-12">
                        <label for="inputNanme4" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%=usergroup.name%>"
                            required>
                    </div>
                    
                    <div class="text-center mg-3 col-12 mg-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="/usergroup/viewAll" class="btn orange btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
            </form>
        </div>
    </div>
<%- include('../layouts/footer') %>