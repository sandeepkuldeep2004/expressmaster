<%- include('../layouts/header') %>
<div class="card">
    <div class="card-body col-lg-6">
        <h5 class="card-title">Edit Left Navigation</h5>
        <%if(locals.errorMessage) { %>
            <div class="alert alert-success" role="alert">
                <%=errorMessage%>
                </div>
        <% } %> 
        <!-- Vertical Form -->
        <form action="/navigation/<%=modules._id%>" method="post" class="col s12 row g-3" needs-validation>
            <input type="hidden" name="_csrf" value="<%=csrfToken %>">
            <div class="col-12 mg-3">
                <label for="inputNanme4" class="form-label">Code</label>
                <input type="text" class="form-control" id="code" name="code" value="<%=modules.code%>" required>
                <div class="invalid-feedback">Please provide a Code.</div>
            </div>
            <div class="col-12 mg-3">
                <label for="inputEmail4" class="form-label">Name</label>
                <input type="text" id="name" name="name" class="form-control" value="<%=modules.name%>" required>
                <div class="invalid-feedback">Please provide a Name.</div>
            </div>
            <div class="col-12 mg-3">
                <label for="inputPassword4" class="form-label">landing Url</label>
                <input type="text" id="url" name="url" class="form-control" value="<%=modules.url%>">
            </div>
            <div class="col-12 mg-3">
                <label for="inputAddress" class="form-label">Class Name</label>
                <input type="text" id="cssclassname" name="cssclassname" class="form-control" value="<%=modules.cssclassname%>" required>
                <div class="invalid-feedback">Please provide a Class Name.</div>
            </div>
            <div class="col-12 mg-3">
                <label for="inputAddress" class="form-label">Position</label>
                <input type="number" id="position" name="position" class="form-control" value="<%=modules.position%>" required>
                <div class="invalid-feedback">Please provide a Position.</div>
            </div>
            <div class="col-12 mg-3">
                <label for="exampleFormControlSelect2" class="form-label">Status</label>
                <select class="form-control" id="active" name="active" required>
                        <%if(modules.active) { %>
                            <option value=true selected>Active</option>
                            <option value=false>Inactive</option>
                            <%}else{%>
                            <option value=true>Active</option>
                            <option value=false selected>Inactive</option>
                        <%}%>
                </select>
              </div>
              <div class="text-center mg-3 col-12 mg-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <!-- <input type="submit" value="Save" class="btn"> -->
                <a href="/dashboard" class="btn orange"><button type="reset"
                        class="btn btn-secondary">Cancel</button></a>
            </div>
        </form><!-- Vertical Form -->
    </div>
</div>
<%- include('../layouts/footer') %>


