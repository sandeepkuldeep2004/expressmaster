<%- include('../layouts/header') %>
<h3>Add Currency</h3>
<div class="row">
    <form action="/currency/add" method="POST" class="col s12">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="row">
            <div class="input-field">
                <input type="text" id="isocode" name="isocode" value={{isocode}}>
                <label for="title">Code</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="name" name="name" value={{name}}>
                <label for="title">Name</label>
            </div>
        </div>
       
         <div class="row">
            <div class="input-field">
                <input type="text" id="fallbackcurrency" name="fallbackcurrency" value={{fallbackcurrency}}>
                <label for="title">Fallback Currency</label>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
<%- include('../layouts/footer') %>