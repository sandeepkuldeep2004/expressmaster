<%- include('../layouts/header') %>

<h3>Add Base Site</h3>
<div class="row">
    <form action="/basesite/add" method="POST" class="col s12">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="row">
            <div class="input-field">
                <input type="text" id="code" name="code" value={{code}}>
                <label for="title">Code</label>
            </div>
        </div>
         <div class="row">
            <div class="input-field">
                <input type="text" id="name" name="name" value={{name}}>
                <label for="title">Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="description" name="description" value={{description}}>
                <label for="title">Description</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="url" name="url" value={{url}}>
                <label for="title">Url</label>
            </div>
        </div>
        <div class="row">
                <input type="text" id="productCatalog" name="productCatalog" value={{productCatalog}}>
                <label for="title">Product Catalog</label>
        </div>
        <div class="row">
                <input type="text" id="contentCatalog" name="contentCatalog" value={{contentCatalog}}>
                <label for="title">Content Catalog</label>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
<%- include('../layouts/footer') %>
