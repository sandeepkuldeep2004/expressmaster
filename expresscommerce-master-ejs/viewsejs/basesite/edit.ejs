<h3>Edit Base Site</h3>
<div class="main-form">
    <form action="/basesite/{{basesite._id}}" method="POST" class="form-horizontal">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group row">
            <label class="control-label col-sm-3" for="name">Name:</label>
            <div class="col-sm-9">
                <input class="form-control" type="text" id="name" name="name" value="{{basesite.name}}">
            </div>
        </div>

        <div class="form-group row">
             <label class="control-label col-sm-3" for="Status">Status:</label>
              <div class="col-sm-9">
                <select class="form-control" id="status" name="status">
                    {{#select basesite.status}}
                    <option value="active" selected>active</option>
                    <option value="inactive">Inactive</option>
                    {{/select}}
                </select>
            </div>
        </div>
        <div class="form-group row">
             <label class="control-label col-sm-3" for="catalog">Product Catalog:</label>
              <div class="col-sm-9">
               <select class="form-control" id="productCatalog" name="productCatalog">
                     {{#select 'us-product-catalog'}}
                        {{#each productCatalogList}}
                            <option value="{{this.code}}"> {{this.name}} </option>
                        {{/each}}
                     {{/select}}
                 </select>
            </div>
        </div>

        <div class="form-group row">
             <label class="control-label col-sm-3" for="Content">Content Catalog:</label>
              <div class="col-sm-9">
               <select class="form-control" id="status" name="contentCatalog">
                     {{#select 'us-content-catalog'}}
                        {{#each contentCatalogList}}
                            <option value="{{this.code}}"> {{this.name}} </option>
                        {{/each}}
                     {{/select}}
                 </select>
            </div>
        </div>

        <div class="form-group row">
             <label class="control-label col-sm-3" for="Status">Status:</label>
              <div class="col-sm-9">
              <select class="form-control" id="status" name="status">
                    {{#select basesite.status}}
                    <option value="active" selected>active</option>
                    <option value="inactive">Inactive</option>
                    {{/select}}
                </select>
            </div>
        </div>
        <div class="form-group row">
             <label class="control-label col-sm-3" for="title">Description:</label>
              <div class="col-sm-9">
                <textarea class="form-control" rows="5" id="description">{{basesite.description}}</textarea>
            </div>
        </div>

        <div class="row">
             <a href="/dashboard" class="btn btn btn-cancel-btn">Cancel</a>
            <input type="submit" value="Save" class="btn btn-save-btn">
           
        </div>
    </form>
</div>