<%- include('../layouts/header') %>
      <form action="/solr/search" method="POST" id="delete-form">
                    <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
                  <input type="text" class="form-control web-search-box" placeholder="search" name="keyword" value=''>
                    <button type="submit" class="btn red ">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
{{#if customers}}
<table class="striped">
    <thead>
        Total Customers: {{customers.length}}
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        {{#each customers}}
        <tr>
            <td><a href="/solr/customer/{{id}}">{{id}}</a></td>
            <td>{{first_name}} </td>
            <td>{{last_name}} </td>
            <td>{{email}}</td>
            <td>{{gender}}</td>
            <td>
                <a href="/solr/customer/{{id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/solr/customer/remove/{{id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any orders</p>
{{/if}}

<div class="fixed-action-btn">
    <a href="/solr/customer" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus"></i></a>
</div>
<div class="fixed-action-btn">
    
       <form action="/solr/updateIndex" method="POST" id="btn-floating btn-large waves-effect waves-light red">
                    <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
                    <input type="hidden" name="_method" value="update">
                    <button title="Full Index" type="submit" class="btn-floating btn-large waves-effect waves-light red">
                     <i class="fas fa-upload"></i>
                    </button>
                </form>
         
    <a href="/solr/customer" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus" title="New Customer"></i></a>
</div>
<%- include('../layouts/footer') %>