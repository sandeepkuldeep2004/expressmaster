<h3>Add Campaign</h3>
<div class="row">
    <form action="/campaigns/add" method="POST" class="col s12">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="row">
            <div class="input-field">
                <input type="text" id="code" name="code" value={{code}}>
                <label for="title">Code</label>
            </div>
        </div>
         <div class="row">
            <div class="input-field">
                <input type="text" id="type" name="type" value={{type}}>
                <label for="title">Type</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="emailTemplate" name="emailTemplate" value={{emailTemplate}}>
                <label for="title">Email Template</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="startDate" name="startDate" value={{startDate}}>
                <label for="title">Start Date</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="expiryDate" name="expiryDate" value={{expiryDate}}>
                <label for="title">Expiry Date</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="cronExpression" name="cronExpression" value={{cronExpression}}>
                <label for="title">cron Expression</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="true" selected>true</option>
                    <option value="false">false</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>