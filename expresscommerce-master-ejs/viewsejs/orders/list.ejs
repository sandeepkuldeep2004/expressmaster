<%- include('../layouts/header') %>
<%if (orders) { %>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title float-right">

               <!-- <a href="/products/add" class="btn-floating btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add new product
                </a>-->
                <!--<a href="/usergroup/user/add" class="btn-floating btn btn-sm btn-outline-primary">
                    <i class="fas fa-plus"></i> Add user in group
                </a>-->
               
            </h5>
           
            <table class="table table-hover" id="example">
                <thead>
                    <tr>
                        <th scope="col">Order Id</th>
                        <th scope="col">Purchase Order No</th>
                        <th scope="col">Delivery Cost</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">OMS  Status</th>
                        <th scope="col">Order Date</th>
                        <th scope="col">View Detail</th>
                    </tr>
                </thead>
                <tbody>
                   
                    <% orders.forEach(ordersIrr => { %> 
                        <tr>
                            <td>    <span class="dash-status"></span><%=ordersIrr.id%><span></td>
                                    <td><span class="dash-status"></span><%=ordersIrr.purchaseOrderNumber%></span></td>
                                    <td><span class="dash-status"></span><%=ordersIrr.deliveryCost%></span></td>
                                    <td><span class="dash-status"></span><%=ordersIrr.totalPrice%></span></td>
                                    <td><span class="dash-status"></span><%=ordersIrr.omsStatus%></span></td>
                                    <td><span class="dash-status"></span><%=moment(ordersIrr.creationdate).format('Do MMMM, YYYY');%></span></td>
                                    <td>
                                        <div class="bo-edit-row">
                                            <a href="/sync/order/<%=ordersIrr._id%>" class="btn btn-float">
                                                <i class="bi bi-view-list"></i>
                                            </a>
                                            
                                        </div>
                                       
                                    </td>
                                </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%} else{ %>
            <p>Not found</p>
            <% } %>
    </div>
    </div>
    <%- include('../layouts/footer') %>

 