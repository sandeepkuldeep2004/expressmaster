<%- include('../layouts/header') %>
<div class="card">
  <div class="card-body col-lg-12">
    <h5 class="card-title">Edit Langauge</h5>
    <%if(locals.errorMessage) { %>
    <div class="alert alert-success" role="alert">
      <%=errorMessage%>
    </div>
    <% } %>
    <!-- Vertical Form -->
    <form action="/language/<%=language._id%>" method="POST" class="row g-3 needs-validation">
      <input type="hidden" name="_csrf" value="<%=csrfToken %>">
      <div class="row col-lg-6">

        <div class="col-12 mg-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required value="<%=language.name%>">
          <div class="invalid-feedback">Please provide a Name.</div>
        </div>

        <div class="col-12 mg-3">
            <label for="fallbacklanguage" class="form-label">Fallback Language</label>
            <input type="text" class="form-control" id="fallbacklanguage" name="fallbacklanguage" required value="<%=language.fallbacklanguage%>">
            <div class="invalid-feedback">Please provide a Fallback Language.</div>
          </div>

        <div class="col-12 mg-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-control" id="status" name="active" required>
            <% if(language.status) { %>
            <option value=active selected>Active</option>
            <option value=inactive>Inactive</option>
            <%}else{%>
            <option value=active>Active</option>
            <option value=inactive selected>Inactive</option>
            <% } %>
          </select>
        </div>
        <div class="text-center mg-3 col-12">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/language/viewAll" class="btn orange btn-secondary">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include('../layouts/footer') %>