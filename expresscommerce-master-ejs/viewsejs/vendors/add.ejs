<%- include('../layouts/header') %>
<div class="card">
  <div class="card-body col-lg-12">
    <h5 class="card-title">Add Vendor</h5>
    <%if(locals.errorMessage) { %>
    <div class="alert alert-success" role="alert">
      <%=errorMessage%>
    </div>
    <% } %>
    <!-- Vertical Form -->
    <form action="/vendors/add" method="POST" class="row g-3 needs-validation">
      <input type="hidden" name="_csrf" value="<%=csrfToken %>">
      <div class="row col-lg-6">
        
        <div class="col-12 mg-3">
          <label for="code" class="form-label">Code</label>
          <input type="text" class="form-control" id="code" name="code" required>
          <div class="invalid-feedback">Please provide a Code.</div>
        </div>

        <div class="col-12 mg-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
          <div class="invalid-feedback">Please provide a Name.</div>
        </div>

        <div class="col-12 mg-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-control" id="status" name="status" required>           
            <option value="true" selected>Active</option>
            <option value="false">Inactive</option>            
          </select>
        </div>
        <div class="text-center mg-3 col-12">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/vendors/viewAll" class="btn orange btn-secondary">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include('../layouts/footer') %>