<%- include('../layouts/header') %>
<div class="card">
  <div class="card-body col-lg-12">
    <h5 class="card-title">Edit OAuth Client</h5>
    <%if(locals.errorMessage) { %>
    <div class="alert alert-success" role="alert">
      <%=errorMessage%>
    </div>
    <% } %>
    <!-- Vertical Form -->
    <form action="/oauthclient/<%=oauthclient._id%>" method="POST" class="row g-3 needs-validation">
      <input type="hidden" name="_csrf" value="<%=csrfToken %>">
      <div class="row col-lg-6">

        <div class="col-12 mg-3">
          <label for="clientId" class="form-label">Client Id</label>
          <input type="text" class="form-control" id="clientId" name="clientId" required value="<%=oauthclient.clientId%>">
          <div class="invalid-feedback">Please provide a Client Id.</div>
        </div>

        <div class="col-12 mg-3">
          <label for="secretkey" class="form-label">Secret Key</label>
          <input type="text" class="form-control" id="secretkey" name="secretkey" required value="<%=oauthclient.clientSecret%>">
          <div class="invalid-feedback">Please provide a Secret Key.</div>
        </div>

        <div class="col-12 mg-3">
          <label for="scope" class="form-label">Scope</label>
          <input type="text" class="form-control" id="scope" name="scope" required value="<%=oauthclient.scope%>">
          <div class="invalid-feedback">Please provide a Scope.</div>
        </div>
        <div class="col-12 mg-3">
          <label for="authorities" class="form-label">Authorities</label>
          <input type="text" class="form-control" id="authorities" name="authorities" required value="<%=oauthclient.authorities%>">
          <div class="invalid-feedback">Please provide a Authorities.</div>
        </div>
        <div class="col-12 mg-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-control" id="status" name="active" required>
            <% if(oauthclient.active) { %>
            <option value=true selected>Active</option>
            <option value=false>Inactive</option>
            <%}else{%>
            <option value=true>Active</option>
            <option value=false selected>Inactive</option>
            <% } %>
          </select>
        </div>
        <div class="text-center mg-3 col-12">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/oauthclient/viewAll" class="btn orange btn-secondary">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include('../layouts/footer') %>