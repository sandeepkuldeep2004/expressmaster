{{#if countryList}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <a href="/country/add" class="btn-floating btn-large waves-effect waves-light red float-none">
                Add Country <i class="fas fa-plus"></i>
            </a>
        </h5>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Country Name</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each countryList}}
                <tr>
                    <td><a href="/country/{{isocode}}">{{isocode}}</a></td>
                    <td><a href="/country/{{isocode}}">{{name}}</a></td>
                    <td>
                        <div class="bo-edit-row">
                            <a href="/country/{{isocode}}" class="btn btn-float">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="/country/remove/{{_id}}" method="POST" id="delete-form">
                                <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn red">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<p>You have not created any country</p>
{{/if}}