{{#if languageList}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <a href="/language/add" class="btn-floating btn-large waves-effect waves-light red float-none">
                Add Language <i class="fas fa-plus"></i>
            </a>
        </h5>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>IsoCode</th>
                    <th>Name</th>
                    <th>Fallback Language</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each languageList}}
                <tr>
                    <td><a href="/language/{{isocode}}">{{isocode}}</a></td>
                    <td><a href="/language/{{name}}">{{name}}</a></td>
                    <td><a href="/language/{{isocode}}">{{fallbacklanguage}}</a></td>
                    <td>
                        <div class="bo-edit-row">
                            <a href="/language/{{isocode}}" class="btn btn-float">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form action="/language/remove/{{_id}}" method="POST" id="delete-form">
                                <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn red">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<p>You have not created any Language</p>
{{/if}}