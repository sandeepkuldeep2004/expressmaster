<h3>Edit Langauge</h3>
<div class="row">
    <form action="/language/{{language._id}}" method="POST" class="col s12">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="name" name="name" value="{{language.name}}">
                <label for="title">Name</label>
            </div>
            <div class="input-field">
                <input type="text" id="fallbacklanguage" name="fallbacklanguage" value="{{language.fallbacklanguage}}">
                <label for="title">Fallback Language</label>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>